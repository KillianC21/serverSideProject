<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/stylesheets/stylesheet.css">
        
    </head>
    <body>
        <div>
            <%- include('partials/header') %>
        </div>
        <div class="heading">
            <h1>BOOK NOW!!!</h1>
        </div>
        <div class="form_div">
            <form action="/booksession" method="post" class="form">
                <label for="id">Id</label>
                <input type="number" name="id" id="id" required>
                <br>
                <label for="full_name">Full Name: </label>
                <input type="text" name="full_name" id="full_name" required>
                <br>
                <label for="email">Email: </label>
                <input type="email" name="email" id="email" required>
                <br>
                <label for="phone">Contact Number: </label>
                <input type="tel" id="phone" name="phone" required>
                <br>
                <label for="date">Start Date: </label>
                <input type="datetime-local" name="date" id="date" required>
                <br><br>
                <div class="card_form">
                    <label for="card">Card Number: </label>
                    <input type="number" id="card" name="card" maxlength="16" required>
                    <br>
                    <label for="expiry">Expiry Date:</label>
                    <input type="text" name="expiry" id="expiry" pattern ="\d{2}/\d{2}" required>
                    <br>
                    <label for="CCV">CCV: </label>
                    <input type="text" maxlength="3" id="ccv" name="ccv" required>
                </div>
                <br><br>
                <button class="form_btn" type="submit">SUBMIT</button>
            </form>
        </div>
        <%- include('partials/footer') %>
        <script src="/javascripts/script.js"></script>
    </body>
   
</html>